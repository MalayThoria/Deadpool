# Production Environment Configuration
# LP Assistant Healthcare Platform

# Application Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://username:password@db:5432/lp_assistant_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Security Configuration
SECRET_KEY=your-super-secure-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# API Configuration
API_V1_STR=/api/v1
API_TITLE=LP Assistant Healthcare Platform API
API_VERSION=1.0.0
API_DESCRIPTION=Healthcare platform for prescription analysis and patient management

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=/app/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@yourdomain.com

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
LOG_FILE=/app/logs/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Performance Configuration
WORKERS=4
WORKER_CONNECTIONS=1000
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# SSL Configuration
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Health Check
HEALTH_CHECK_ENDPOINT=/health

# Frontend Configuration
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_ENVIRONMENT=production
REACT_APP_SENTRY_DSN=your-frontend-sentry-dsn
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-id

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com
STATIC_URL=https://static.yourdomain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket

# Domain Configuration
DOMAIN_NAME=yourdomain.com
WWW_REDIRECT=true

# Security Headers
SECURE_BROWSER_XSS_FILTER=true
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_FRAME_DENY=true
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin