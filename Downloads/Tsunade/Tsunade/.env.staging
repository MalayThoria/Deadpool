# LP Assistant Healthcare Platform - Staging Environment Configuration
# Environment configuration for User Acceptance Testing (UAT)

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Primary relational database)
DATABASE_URL=postgresql://lp_assistant_user:lp_assistant_password@postgres:5432/lp_assistant_db
DB_HOST=postgres
DB_PORT=5432
DB_NAME=lp_assistant_db
DB_USER=lp_assistant_user
DB_PASSWORD=lp_assistant_password

# Redis Cache (Session storage and caching)
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# MongoDB (Document storage and logs)
MONGODB_URL=mongodb://mongo_user:mongo_password@mongodb:27017/lp_assistant_mongo
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=lp_assistant_mongo
MONGO_USER=mongo_user
MONGO_PASSWORD=mongo_password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Application Secret Key (Staging specific)
SECRET_KEY=staging-secret-key-for-uat-testing-32-chars-min

# JWT Configuration
JWT_SECRET_KEY=staging-jwt-secret-key-for-uat-testing
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Key for sensitive data (32 bytes base64 encoded)
ENCRYPTION_KEY=c3RhZ2luZy1lbmNyeXB0aW9uLWtleS0zMi1ieXRlcw==

# Environment
ENVIRONMENT=staging
DEBUG=false

# =============================================================================
# EXTERNAL SERVICES (Disabled for staging)
# =============================================================================

# SendGrid Email Service (Use test mode)
SENDGRID_API_KEY=test-sendgrid-api-key
SENDGRID_FROM_EMAIL=staging@lpassistant.com
SENDGRID_FROM_NAME=LP Assistant Healthcare (Staging)

# Firebase (Push notifications - disabled)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_PROJECT_ID=staging-firebase-project

# AI/ML Services (Use test keys or mock)
OPENAI_API_KEY=test-openai-api-key
HUGGINGFACE_API_KEY=test-huggingface-api-key
ANTHROPIC_API_KEY=test-anthropic-api-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# CORS Configuration (Allow staging domains)
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://staging.lpassistant.com
CORS_ALLOW_CREDENTIALS=true

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=LP Assistant Healthcare Platform (Staging)
PROJECT_VERSION=1.0.0-staging

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Rate Limiting (More lenient for testing)
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=20

# =============================================================================
# OAUTH CONFIGURATION (Test credentials)
# =============================================================================

# Google OAuth (Test credentials)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret

# Facebook OAuth (Test credentials)
FACEBOOK_CLIENT_ID=test-facebook-client-id
FACEBOOK_CLIENT_SECRET=test-facebook-client-secret

# Microsoft OAuth (Test credentials)
MICROSOFT_CLIENT_ID=test-microsoft-client-id
MICROSOFT_CLIENT_SECRET=test-microsoft-client-secret

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Sentry Error Tracking (Disabled for staging)
SENTRY_DSN=

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# HEALTH AND COMPLIANCE
# =============================================================================

# HIPAA Compliance (Enabled for testing)
HIPAA_ENABLED=true
AUDIT_LOG_ENABLED=true
DATA_RETENTION_DAYS=30  # Shorter for staging

# GDPR Compliance
GDPR_ENABLED=true
DATA_EXPORT_ENABLED=true
DATA_DELETION_ENABLED=true

# Backup Configuration (Disabled for staging)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# React App Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ENVIRONMENT=staging
REACT_APP_VERSION=1.0.0-staging

# PWA Configuration
REACT_APP_PWA_ENABLED=true
REACT_APP_OFFLINE_ENABLED=true

# Analytics (Disabled for staging)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_HOTJAR_ID=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools (Disabled for staging)
DEV_RELOAD=false
DEV_CORS_ENABLED=true
DEV_SQL_ECHO=false

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_password@postgres:5432/test_db
TEST_REDIS_URL=redis://redis:6379/1