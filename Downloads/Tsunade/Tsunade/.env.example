# LP Assistant Healthcare Platform - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (Primary relational database)
DATABASE_URL=postgresql://lp_assistant_user:lp_assistant_password@localhost:5432/lp_assistant_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lp_assistant_db
DB_USER=lp_assistant_user
DB_PASSWORD=lp_assistant_password

# Redis Cache (Session storage and caching)
REDIS_URL=redis://:redis_password@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# MongoDB (Document storage and logs)
MONGODB_URL=mongodb://mongo_user:mongo_password@localhost:27017/lp_assistant_mongo
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=lp_assistant_mongo
MONGO_USER=mongo_user
MONGO_PASSWORD=mongo_password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Application Secret Key (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Key for sensitive data (32 bytes base64 encoded)
ENCRYPTION_KEY=your-base64-encoded-32-byte-encryption-key

# Environment
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# SendGrid Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=LP Assistant Healthcare

# Firebase (Push notifications)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Cloud Services (Optional)
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./gcp-credentials.json

# AWS Services (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=LP Assistant Healthcare Platform
PROJECT_VERSION=1.0.0

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn

# Prometheus Metrics (Optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# =============================================================================
# HEALTH AND COMPLIANCE
# =============================================================================

# HIPAA Compliance
HIPAA_ENABLED=true
AUDIT_LOG_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years

# GDPR Compliance
GDPR_ENABLED=true
DATA_EXPORT_ENABLED=true
DATA_DELETION_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# React App Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# PWA Configuration
REACT_APP_PWA_ENABLED=true
REACT_APP_OFFLINE_ENABLED=true

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-tracking-id
REACT_APP_HOTJAR_ID=your-hotjar-id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
DEV_RELOAD=true
DEV_CORS_ENABLED=true
DEV_SQL_ECHO=false

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/1

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify these for production deployment

# ENVIRONMENT=production
# DEBUG=false
# CORS_ORIGINS=https://yourdomain.com
# DATABASE_URL=postgresql://prod_user:prod_password@prod-db:5432/prod_db
# REDIS_URL=redis://:prod_password@prod-redis:6379/0
# SECRET_KEY=your-production-secret-key-min-32-chars
# JWT_SECRET_KEY=your-production-jwt-secret-key